  "description": "Agentes que lembram o que foi dito, mas aprendem como resolver - Implementação TypeScript da arquitetura ReMem",
  "author": "EvoCoder-Lite Contributors",
  "license": "MIT",
  "keywords": [
    "typescript",
    "nestjs",
    "langgraph",
    "ai-agent",
    "memory",
    "llm",
    "test-time-learning",
    "self-evolving-memory"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tostechbr/evocoder-lite.git"
  },
  "bugs": {
    "url": "https://github.com/tostechbr/evocoder-lite/issues"
  },
  "homepage": "https://github.com/tostechbr/evocoder-lite#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@langchain/langgraph": "^1.0.4",
    "@langchain/openai": "^1.1.3",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "chromadb": "^3.1.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "langchain": "^1.1.4",
    "openai": "^6.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
